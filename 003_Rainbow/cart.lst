     16  f00b							;; Start a new frame by turning on VBLANK and VSYNC
     17  f00b							;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
     18  f00b				   StartFrame
     19  f00b		       a9 02		      lda	#2	; same as binary value %00000010
     20  f00d		       85 01		      sta	VBLANK	; turn on VBLANK
     21  f00f		       85 00		      sta	VSYNC	; turn on VSYNC
     22  f011
     23  f011							;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
     24  f011							;; Generate the three lines of VSYNC
     25  f011							;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
     26  f011		       85 02		      sta	WSYNC	; first scanline
     27  f013		       85 02		      sta	WSYNC	; second scanline
     28  f015		       85 02		      sta	WSYNC	; third scanline
     29  f017
     30  f017		       a9 00		      lda	#0
     31  f019		       85 00		      sta	VSYNC	; turn off VSYNC
     32  f01b
     33  f01b							;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
     34  f01b							;; Let the TIA output the recommended 37 scanlines of VBLANK
     35  f01b							;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
     36  f01b		       a2 25		      ldx	#37	; X = 37 (to count 37 scanlines)
     37  f01d				   LoopVBlank
     38  f01d		       85 02		      sta	WSYNC	; hit WSYNC and wait for the next scanline
     39  f01f		       ca		      dex		; X--
     40  f020		       d0 fb		      bne	LoopVBlank	; loop while X != 0
     41  f022
     42  f022		       a9 00		      lda	#0
     43  f024		       85 01		      sta	VBLANK	; turn off VBLANK
     44  f026
     45  f026							;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
     46  f026							;; Draw 192 visible scanlines (kernel)
     47  f026							;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
     48  f026		       a2 c0		      ldx	#192	; counter for 192 visible scanlines
     49  f028				   LoopVisible
     50  f028		       86 09		      stx	COLUBK	; set the background color
     51  f02a		       85 02		      sta	WSYNC	; wait for the next scanline
     52  f02c		       ca		      dex		; X--
     53  f02d		       d0 f9		      bne	LoopVisible	; loop while X != 0
     54  f02f
     55  f02f							;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
     56  f02f							;; Output 30 more VBLANK lines (overscan) to complete our frame
     57  f02f							;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
     58  f02f		       a9 02		      lda	#2
     59  f031		       85 01		      sta	VBLANK	; hit and turn on VBLANK again
     60  f033
     61  f033		       a2 1e		      ldx	#30	; counter for 30 scanlines
     62  f035				   LoopOverscan
     63  f035		       85 02		      sta	WSYNC	; wait for the next scanline
     64  f037		       ca		      dex		; X--
     65  f038		       d0 fb		      bne	LoopOverscan	; loop while X != 0
     66  f03a
     67  f03a		       4c 0b f0 	      jmp	StartFrame	; go to next frame
     68  f03d
